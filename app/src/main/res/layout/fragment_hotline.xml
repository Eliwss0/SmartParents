<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotlineFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/emergency_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/emergency_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/non_emergency_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/non_emergency_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emergency_call" />

            <TextView
                android:id="@+id/emergency_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/emergency_call"
                app:layout_constraintEnd_toEndOf="@+id/emergency_title"
                app:layout_constraintStart_toStartOf="@+id/emergency_title"
                app:layout_constraintTop_toBottomOf="@+id/emergency_title" />

            <TextView
                android:id="@+id/parent_hotline_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:layout_marginRight="100dp"
                android:text="@string/parent_hotline_label"
                app:layout_constraintBottom_toBottomOf="@+id/parent_hotline_number"
                app:layout_constraintEnd_toEndOf="@+id/emergency_title"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/non_emergency_title"
                app:layout_constraintTop_toTopOf="@+id/parent_hotline_number"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/poison_control_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/poison_control_label"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toTopOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/human_trafficking_hotline_label"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/parent_hotline_label"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:autoLink="phone"
                android:text="@string/human_trafficking_hotline_number"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:autoLink="phone"
                android:text="@string/poison_control_number"
                app:layout_constraintEnd_toEndOf="@+id/parent_hotline_number"
                app:layout_constraintTop_toBottomOf="@+id/parent_hotline_number" />

            <TextView
                android:id="@+id/parent_hotline_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="156dp"
                android:layout_marginLeft="156dp"
                android:layout_marginTop="36dp"
                android:autoLink="phone"
                android:linksClickable="true"
                android:text="@string/parent_hotline_number"
                app:layout_constraintStart_toStartOf="@+id/non_emergency_title"
                app:layout_constraintTop_toBottomOf="@+id/government_affiliation_text" />

            <TextView
                android:id="@+id/government_affiliation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/government_affiliation"
                app:layout_constraintEnd_toEndOf="@+id/non_emergency_title"
                app:layout_constraintStart_toStartOf="@+id/non_emergency_title"
                app:layout_constraintTop_toBottomOf="@+id/non_emergency_title" />

            <TextView
                android:id="@+id/parent_helpline_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/parent_hotline_times"
                app:layout_constraintStart_toStartOf="@+id/parent_hotline_label"
                app:layout_constraintTop_toBottomOf="@+id/parent_hotline_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>